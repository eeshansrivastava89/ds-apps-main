---
/**
 * PostList - Simple list of blog posts for the Build Log
 *
 * Displays posts with project:* tags in a clean, minimal format.
 */
import type { CollectionEntry } from 'astro:content'

interface Props {
  posts: CollectionEntry<'post'>[]
  showProjectFilter?: boolean
}

const { posts, showProjectFilter = true } = Astro.props

// Extract unique projects from posts (tags starting with "project:")
const getProjectFromTags = (tags: string[]) =>
  tags.find(t => t.startsWith('project:'))?.replace('project:', '') || null

const projects = [...new Set(
  posts.map(p => getProjectFromTags(p.data.tags || [])).filter(Boolean)
)] as string[]

const PROJECT_NAMES: Record<string, string> = {
  'ab-sim': 'A/B Simulator',
  'general': 'General',
  'build-log': 'Build Log',
}

const formatDate = (date: Date) =>
  date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })

const getDisplayTags = (tags: string[]) => tags.filter(t => !t.startsWith('project:'))
---

<div class="space-y-6">
  {showProjectFilter && projects.length > 1 && (
    <div class="flex flex-wrap gap-2" id="project-filters">
      <button
        data-filter="all"
        class="filter-btn active px-3 py-1.5 text-xs font-medium bg-foreground text-background"
      >
        All ({posts.length})
      </button>
      {projects.map(project => {
        const count = posts.filter(p => getProjectFromTags(p.data.tags || []) === project).length
        return (
          <button
            data-filter={project}
            class="filter-btn px-3 py-1.5 text-xs font-medium bg-muted text-muted-foreground hover:bg-muted/80"
          >
            {PROJECT_NAMES[project] || project} ({count})
          </button>
        )
      })}
    </div>
  )}

  <div class="space-y-6" id="posts-list">
    {posts.map(post => {
      const project = getProjectFromTags(post.data.tags || [])
      const displayTags = getDisplayTags(post.data.tags || [])

      return (
        <article
          class="post-item border-b border-border pb-6 last:border-b-0 last:pb-0"
          data-project={project}
        >
          <time class="text-xs text-muted-foreground">{formatDate(post.data.publishDate)}</time>

          <h3 class="mt-1">
            <a href={`/blog/${post.slug}/`} class="text-base font-semibold text-foreground hover:text-muted-foreground transition">
              {post.data.featured && <span class="mr-1">⭐</span>}
              {post.data.title}
            </a>
          </h3>

          {post.data.description && (
            <p class="mt-1 text-sm text-muted-foreground">{post.data.description}</p>
          )}

          {displayTags.length > 0 && (
            <div class="mt-2 text-xs text-muted-foreground">{displayTags.join(' · ')}</div>
          )}
        </article>
      )
    })}
  </div>

  {posts.length === 0 && (<p class="text-sm text-muted-foreground">No posts yet.</p>)}
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn')
    const postItems = document.querySelectorAll('.post-item')

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.getAttribute('data-filter')

        filterBtns.forEach(b => {
          b.classList.remove('active', 'bg-foreground', 'text-background')
          b.classList.add('bg-muted', 'text-muted-foreground')
        })
        btn.classList.add('active', 'bg-foreground', 'text-background')
        btn.classList.remove('bg-muted', 'text-muted-foreground')

        postItems.forEach(item => {
          const project = item.getAttribute('data-project')
          if (filter === 'all' || project === filter) {
            item.classList.remove('hidden')
          } else {
            item.classList.add('hidden')
          }
        })
      })
    })
  })
</script>
